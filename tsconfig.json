{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",

    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "declaration": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist", "src/__tests__", "node_modules"]
}
